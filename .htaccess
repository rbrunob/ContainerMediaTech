RewriteEngine on

# Redireciona para HTTPS se estiver na porta 80
RewriteCond %{SERVER_PORT} 80

# Reescreve as URLs
RewriteCond %{REQUEST_FILENAME} !-d 
RewriteCond %{REQUEST_FILENAME}\.php -f 
RewriteRule ^(.*)$ $1.php [L]
RewriteRule ^home$ ./index.php?page=1
RewriteRule ^home$ ./index?page=1
RewriteRule ^quem-somos$ ./index.php?page=2
RewriteRule ^quem-somos$ ./index?page=2