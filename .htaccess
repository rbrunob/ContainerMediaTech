RewriteEngine on

# Redireciona para HTTPS se estiver na porta 80
RewriteCond %{SERVER_PORT} 80

## External Redirect 
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,NC]

## ## Internal Redirect
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php

RewriteRule ^home$ ./index.php?page=1

RewriteRule ^$ ./index.php?page=1

RewriteRule ^quem-somos$ ./index.php?page=2

RewriteRule ^cdn$ ./index.php?page=3

RewriteRule ^cases$ ./index.php?page=4

RewriteRule ^personalizacao$ ./index.php?page=5

RewriteRule ^catalogo$ ./index.php?page=6

RewriteRule ^blog$ ./index.php?page=7

RewriteRule ^blog/([a-z0-9]+)?$ ./index.php?page=8&title=$1 [NC,QSA] 